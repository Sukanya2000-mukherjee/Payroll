
@{
    ViewData["Title"] = "AllowanceMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Allowance Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f4f4f4;
        }

        form {
            max-width: 800px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <nav id="navbar-top" class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Payroll Module</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="https://localhost:7044/Payroll/AdminHomePage">Back to Service</a>
                </li>
                <li>
                    <a class="nav-link" href="https://localhost:7044/Payroll/payrollHome">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://localhost:7044/Payroll/AboutUs">AboutUs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://localhost:7044/Payroll/ContactUs">ContactUs</a>
                </li>


            </ul>
        </div>
    </nav>
   


    <form action="#" method="post" id="allowanceForm" class="container">
        <h2 class="mt-3 mb-4">Allowance Master</h2>

        <div id="allowanceContainer">
            <div class="allowance-group">
                
                <div class="form-group">
                    <label for="allowanceName">Allowance Name:</label>
                    

                    <input type="text" class="form-control" id="allowancenameSelector" name="allowanceName" placeholder="Enter Allowance" required> 
                    
                </div>

                <div class="form-group">
                    <label for="allowanceAmount">Allowance Amount:</label>
                    <input type="text" class="form-control" name="allowanceAmount" id="allowanceamountSelector" required>
                </div>

            </div>
        </div>

      
        <button id="btnsave" type="submit" class="btn btn-primary">Submit Allowance</button>
    </form>




    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
</html>
<script src="\content\js\payroll\allowancescript.js"></script>



