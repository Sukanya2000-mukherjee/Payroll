    <div  class="container-fluid" id="salary-tag">
        <header>
            <h1 >Salary Slip</h1>
        </header>
        <section class="row">
            <div class="col-md-6">

               
                <div class="form-group">
                    <label for="employeeName">Employee Name:</label>
                    <input type="text" class="form-control" id="getemployeeName" name="employeeName" required>
                </div>

                <div class="form-group">
                    <label for="employeeId">Employee ID:</label>
                    <input type="text" class="form-control" id="getemployeeId" name="employeeId" required>
                </div>
               

                <div class="form-group">
                    <label for="allowance">Allowance Name:</label>

                    <select class="form-control" id="getallowancename" name="allowanceName" required>
                        <option value="" disabled selected>Select Allowance</option>

                    </select>
                </div>

                <div class="form-group">
                    <label for="allowance">Allowance Amount:</label>
                    <input type="text" class="form-control" id="getallowanceamount" name="allowanceAmount" required>

                </div>

                <div class="form-group">
                    <label for="deduction">Deduction Name:</label>

                    <select class="form-control" id="getdeductionname" name="deductionName" required>
                        <option value="" disabled selected>Select Deduction</option>
                    </select>
                </div>

                <div class="form-group">

                    <label for="deduction">Deduction Amount:</label>
                    <input type="text" class="form-control" id="getdeductionamount" name="deductionAmount" required>

                </div>

                
            </div>
                <div class="col-md-6">

                    

                    <div class="form-group">
                        <label for="accountHolderName">Account Holder Name:</label>
                        <input type="text" class="form-control" id="getaccountHolderNameSelector" name="accountHolderName" required>
                    </div>

                    <div class="form-group">
                        <label for="accountNumber">Account Number:</label>
                        <input type="text" class="form-control" id="getaccountNumberSelector" name="accountNumber" required>
                    </div>

                    <div class="form-group">
                        <label for="bankName">Bank Name:</label>
                        @* <input type="text" class="form-control" id="getbankNameSelector" name="bankName" required> *@
                    <select class="form-control" id="getbankNameSelector" name="bankName" required>
                        <option value="" disabled selected>Select Bank</option>
                        <option value="state Bank of India">State Bank of India</option>
                        <option value="central Bank of India">Central Bank of India</option>
                        <option value="punjab National Bank of India">Punjab National Bank of India</option>
                        <option value="ICICI Bank">ICICI Bank</option>
                        <option value="HDFC Bank">HDFC Bank</option>
                    </select>
                    </div>

                    <div class="form-group">
                        <label for="branch">Branch:</label>
                        @* <input type="text" class="form-control" id="getbranchSelector" name="branch" required> *@
                    <select class="form-control" id="getbranchSelector" name="branch" required>
                        <option value="" disabled selected>Select Branch</option>
                        <option value="Khardha">Khardha</option>
                        <option value="Barrackpore">Barrackpore</option>
                        <option value="Garia">Garia</option>
                        <option value="Kaikhali">Kaikhali</option>
                        <option value="Behala">Behala</option>
                    </select>
                    </div>

                <div class="form-group">
                    <label for="basicSalary">Basic Salary:</label>
                    <input type="number" class="form-control" id="getbasicSalary" name="basicSalary" required>
                </div>

                <div class="form-group">
                    <label for="totalSalary">Total Salary:</label>
                    <input type="number" class="form-control" id="gettotalSalary" name="totalSalary" required>
                </div>




                </div>
